<%- include("./includes/header.ejs") %>
<main class="main">
  <% if(prods.length > 0){ %>

  <div class="products-container">
    <% for(let product of prods){ %>
    <article class="card-product-item">
      <!-- Card Header Section - Containing product title -->
      <section class="card-product-header">
        <h1 class="product-title"><%= product.title %></h1>
      </section>
      <!-- Card Image Section - Containing product image -->
      <section class="card-product-image">
        <img src="images/book.jpg" alt=" " />
      </section>
      <!-- Card Content Section - COntaining product details: price, description -->
      <section class="card-product-content">
        <h2 class="product-price">$9.99</h2>
        <p class="product-description">
          Lorem ipsum dolor sit amet consectetur, adipisicing elit. Debitis,
          excepturi?
        </p>
      </section>
      <!-- Card Action Section - Containing call to action - Add to cat button -->
      <section class="card-product-action">
        <button class="btn">Add to Cart</button>
      </section>
    </article>
    <% } %>
  </div>

  <% } else { %>
  <h1>No Products Found</h1>

  <% } %>
</main>

<%- include("./includes/footer.ejs") %>
